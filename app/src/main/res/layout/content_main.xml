<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pic_main"
    android:background="@drawable/ic_main_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <!--app:layout_behavior="@string/appbar_scrolling_view_behavior"-->


    <Button
        android:id="@+id/goto_Noti_selection"
        android:layout_width="170dp"
        android:layout_height="288dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="132dp"
        android:alpha="0.9"
        android:drawableTop="@mipmap/ic_menu_go"
        android:fontFamily="serif-monospace"
        android:onClick="goto_Noti_selection"
        android:stateListAnimator="@null"
        android:text="開始上路"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/goto_Inquire"
        android:layout_width="170dp"
        android:layout_height="288dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="8dp"
        android:alpha="0.9"
        android:drawableTop="@mipmap/ic_menu_search"
        android:fontFamily="serif-monospace"
        android:onClick="goto_Inquire"
        android:stateListAnimator="@null"
        android:text="危險路段"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/goto_Noti_selection"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="164dp"
        android:layout_height="61dp"
        android:text="即時通知&#10;危險路段"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/goto_Noti_selection"
        app:layout_constraintEnd_toEndOf="@+id/goto_Noti_selection"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/goto_Noti_selection"
        app:layout_constraintTop_toTopOf="@+id/goto_Noti_selection"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="164dp"
        android:layout_height="61dp"
        android:text="查詢歷史&#10;交通事故資訊"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/goto_Inquire"
        app:layout_constraintEnd_toEndOf="@+id/goto_Inquire"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/goto_Inquire"
        app:layout_constraintTop_toTopOf="@+id/goto_Inquire"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>